            @Html.DisplayNameFor(model => model.Sent2Town)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sent2Town)
        </dd>
        <dt class="col-sm-2">
            People on Booking
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var person in peopleOnBooking)
                {
                    <li>@($"{person.Name}, {person.Surname}, {person.BirthDate}")</li>
                }
            </ul>

        </dd>
