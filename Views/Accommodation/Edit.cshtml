                <label asp-for="AWIDAppartamento" class="control-label"></label>
                @if (ViewBag.IsGestioneAppartamenti)
                {
                    <input asp-for="AWIDAppartamento" class="form-control" />
                }
                else
                {
                    <input type="hidden" asp-for="AWIDAppartamento" class="form-control" />
                    <p>ID Appartamenti disabled in the Configuration.</p>
                }
                <span asp-validation-for="AWIDAppartamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
